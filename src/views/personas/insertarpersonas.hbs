<div class="container">
    <h1>Registrar persona</h1>
    <div class="card">
        <div class="card-header">
            Registrar
        </div>
        <div class="card-body">
            <form action="insertarpersonas" method="POST">
                <div class="mb-3">
                    <input type="text" class="form-control" name="Id_Usuario"
                        placeholder="1">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" name="Nombre"
                        placeholder="Name">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" name="Direccion"
                        placeholder="Calle # apt">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" name="Sexo"
                        placeholder="M/F">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" name="Telefono"
                        placeholder="30483471">
                </div>
                </div>
                <div class="mb-3">
                
                        <button class="form-control btn btn-primary">Registrar</button>
                </div>
                
            </form>
        </div>
    </div>

</div>